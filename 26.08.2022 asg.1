#include <stdio.h>
int main()
{
    char str[10];
	gets(str);	
	int i,c=0,c1=0,c2=0;   
	for(i=0;str[i]!='\0';i++)
	{
		if(isupper(str[i])) 
			c++;
		if(islower(str[i]))
		   c1++;
		if(isdigit(str[i]))
		   c2++;
	}
	printf("Count of uppercase characters:%d\nCount of lowercase characters:%d\nCount of numbers:%d",c,c1,c2);
    return 0;
}
