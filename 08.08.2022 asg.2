#include <stdio.h>
int main()
{
    int n,r,sum=0,temp;
    printf("ENTER A NUMBER:");
    scanf("%d",&n);
    temp=n;
    while(n>0)
    {
        r=n%10;
        sum=sum+(r*r*r);
        n=n/10;
    }
    if(sum==temp)
    printf("ARMSTRONG NUMBER");
    else
    printf("NOT ARMSTRONG NUMBER");
    return 0;
}

