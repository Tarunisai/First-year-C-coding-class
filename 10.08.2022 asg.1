#include <stdio.h>
int main()
{
     int n,r,x,y,sum=0,count=1;
     printf("Enter number\nEnter x and y values ");
     scanf("%d%d%d",&n,&x,&y);
     while(n!=0)
	{
		r=n%10;
		if(r==x)
		{
			r=y;
		}
		sum=sum+r*count;
		count=count*10;
		n=n/10;
	}
	printf("%d",sum);
    return 0;
}

